<div>
  <ul class="breadcrumb">
    <li><a href="/">主页</a> <span class="divider">/</span></li>
    <li><a href="<%= teches_lists_path %>"><%= @tech.category.name %></a> <span class="divider">/</span></li>
    <li class="active"><%= @tech.name %></li>
  </ul>
</div>
<div id="content">
  <div class="container">
    <div class="row">
      <div class="grid-8">
        <div class="news-main">
          <div class="news-top">
            <h1><%= @tech.name %></h1>
            <span><%= @tech.category.name %>&nbsp;&nbsp;<%= @tech.updated_at %></span>
          </div>
          <div class="news-content">
          <p><%= raw @tech.content %></p>
          </div>
          <%= social_share_button_tag("从 #{Setting.app_name} 分享了 #{@tech.name} ,你也来看看吧",:url => tech_detail_url) %>
        </div>
      </div>
      <div class="sidebar" style="float: right;">
        <%= render 'right' %>
      </div>
    </div>
  </div>
</div> <!-- /content -->
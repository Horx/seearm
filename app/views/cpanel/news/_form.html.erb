<%= simple_form_for([:cpanel,@news]) do |f| %>
    <fieldset>
      <legend></legend>
      <%= f.input :name %>
      <%= f.input :category_id, :collection => Category.where("parent_id = ? AND ctype = ?", 0, 2).collect { |s| [s.name,s.id] } %>
      <%= f.input :content, :input_html => {:class => "xxlarge", :rows => 3} %>
      <div class="form-actions">
        <%= f.submit t("cpanel.common.save"), :class => "btn btn-primary", 'data-disable-with' => t("cpanel.common.saving") %>
        <%= link_to 'Back', cpanel_news_index_path %>
      </div>
    </fieldset>
<% end %>
<% content_for :sitemap do %>
    <span class="current">推荐列表</span>
<% end %>
<h1>推荐列表</h1>

<table class="table table-bordered table-striped table-condensed">
  <tr class="head">
    <td class="first">ID</td>
    <td>名称</td>
    <td>位置</td>
    <td>图片</td>
    <td>描述</td>
    <td>链接</td>
    <td class="opts">操作</td>
  </tr>

  <% @positions.each do |positon| %>
      <tr>
        <td class="first"><%= positon.id %></td>
        <td><%= positon.title %></td>
        <td><%= positon.location %></td>
        <td><%= image_tag positon.image %></td>
        <td><%= positon.desc %></td>
        <td><%= link_to positon.url %></td>
        <td>
          <%= link_to '', edit_cpanel_position_path(positon.id), :class => "icon small_edit" %>&nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to '', cpanel_position_path(positon.id), :method => :delete, 'data-confirm' => '确定要删除吗?', :class => "icon small_delete" %>
        </td>
      </tr>
  <% end %>
</table>
<br/>

<%= will_paginate @positions %>

<a href="<%= new_cpanel_position_path %>" class="btn btn-small btn-success"><%= t("cpanel.common.create") %></a>